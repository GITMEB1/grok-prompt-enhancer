{
  "manifest_version": 3,
  "name": "Grok Prompt Enhancer",
  "version": "1.0.0",
  "description": "Enhance your Grok prompts with AI-powered improvements for better responses",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "https://*.grok.com/*",
    "https://x.com/*",
    "https://*.x.com/*",
    "https://*.vercel.app/*",
    "https://*.netlify.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://grok.com/*",
        "https://*.grok.com/*",
        "https://x.com/*",
        "https://*.x.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Grok Prompt Enhancer Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": [
        "https://grok.com/*",
        "https://*.grok.com/*",
        "https://x.com/*",
        "https://*.x.com/*"
      ]
    }
  ],
  "author": "Cursor AI",
  "homepage_url": "https://github.com/your-username/grok-prompt-enhancer"
} 